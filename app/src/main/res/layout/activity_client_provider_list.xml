    <LinearLayout
        android:id="@+id/activity_client_provider_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/half_dimen"
        tools:context="com.manpdev.appointment.ui.activities.ClientProviderListActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_item_client_provider" />

    </LinearLayout>
</layout>
