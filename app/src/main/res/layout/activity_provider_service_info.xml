<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/activity_provider_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.manpdev.appointment.ui.activities.ProviderServiceInfoActivity">


            <ImageView
                android:id="@+id/iv_service_banner"
                android:layout_height="160dp"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_logo_no_text"
                android:background="@android:color/white"
                tools:ignore="ContentDescription"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="1.0" />

            <include
                layout="@layout/service_ui_component_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_service_banner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/include" />

            <TextView
                style="@style/AppTheme.Item.Selectable.Elevated"
                android:paddingStart="@dimen/double_dimen"
                android:paddingEnd="@dimen/double_dimen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minWidth="@dimen/contact_ui_component_min_width"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="@dimen/double_dimen"
                tools:text="email@address.com"
                android:id="@+id/tv_service_email"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/include"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_service_phone"
                style="@style/AppTheme.Item.Selectable.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/double_dimen"
                android:paddingEnd="@dimen/double_dimen"
                android:autoLink="phone"
                android:minWidth="@dimen/contact_ui_component_min_width"
                android:clickable="true"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="@dimen/double_dimen"
                tools:text="888 888 8888"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_email"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_add"
                android:id="@+id/ib_add_service"
                style="@style/AppTheme.Item.Selectable.Elevated"
                tools:ignore="ContentDescription"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_phone"
                app:layout_constraintRight_toLeftOf="@+id/ib_edit_service"
                android:layout_marginEnd="32dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_mode_edit"
                android:id="@+id/ib_edit_service"
                style="@style/AppTheme.Item.Selectable.Elevated"
                tools:ignore="ContentDescription"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_phone"
                app:layout_constraintLeft_toLeftOf="@+id/tv_service_phone"
                app:layout_constraintRight_toRightOf="@+id/tv_service_phone"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete"
                android:id="@+id/ib_remove_service"
                style="@style/AppTheme.Item.Selectable.Elevated"
                tools:ignore="ContentDescription"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_phone"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toRightOf="@+id/ib_edit_service" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>
