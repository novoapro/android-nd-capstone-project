<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/button_inset_vertical"
    android:insetTop="@dimen/button_inset_horizontal"
    android:insetRight="@dimen/button_inset_vertical"
    android:insetBottom="@dimen/button_inset_horizontal">
    <shape android:shape="rectangle">
        <corners android:radius="2dp" />
        <solid android:color="?attr/colorAccent" />
        <padding android:left="@dimen/button_inset_vertical"
            android:top="@dimen/button_inset_horizontal"
            android:right="@dimen/button_inset_vertical"
            android:bottom="@dimen/button_inset_horizontal" />
    </shape>
</inset>